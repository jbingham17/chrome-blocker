{
  "manifest_version": 3,
  "name": "Site Content Blocker",
  "version": "1.2.0",
  "description": "Blocks distracting content on social media sites while keeping essential features",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "css": ["instagram.css"],
      "js": ["instagram.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.reddit.com/*", "*://reddit.com/*"],
      "css": ["reddit.css"],
      "js": ["reddit.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.youtube.com/*", "*://youtube.com/*"],
      "css": ["youtube.css"],
      "js": ["youtube.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.jetpunk.com/*", "*://jetpunk.com/*"],
      "css": ["jetpunk.css"],
      "js": ["jetpunk.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.wikipedia.org/*", "*://wikipedia.org/*"],
      "css": ["wikipedia.css"],
      "js": ["wikipedia.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.x.com/*", "*://x.com/*", "*://*.twitter.com/*", "*://twitter.com/*"],
      "css": ["x.css"],
      "js": ["x.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.linkedin.com/*", "*://linkedin.com/*"],
      "css": ["linkedin.css"],
      "js": ["linkedin.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://news.smol.ai/*"],
      "css": ["smolai.css"],
      "js": ["smolai.js"],
      "run_at": "document_start"
    }
  ]
}
